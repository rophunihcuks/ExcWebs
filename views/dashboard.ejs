<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>ExHub â€” Dashboard</title>
  <link rel="icon" type="image/png" href="/img/ExLogo2.png" />
  <link rel="stylesheet" href="/css/mainv2.css" />
</head>
<body class="page-dark">
<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="logo">
      <span class="logo-icon">
        <img src="/img/ExLogo2.png" alt="ExHub Logo"
             style="width:100%;height:100%;object-fit:cover;border-radius:12px;" />
      </span>
      <span class="logo-text">ExHub</span>
    </a>

    <nav class="header-nav">
      <% if (user) { %>
        <div class="header-user">
          <div class="header-user-pill">
            <% if (user.avatar) { %>
              <img
                src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=64"
                alt="Avatar"
                class="header-user-avatar"
              />
            <% } else { %>
              <span class="user-icon"></span>
            <% } %>
            <span class="user-name"><%= user.global_name %></span>
          </div>
          <form action="/logout" method="post" style="display:inline;">
            <button type="submit" class="btn-ghost">Sign Out</button>
          </form>
        </div>
      <% } %>
    </nav>
  </div>
</header>

<main class="page-main">
  <div class="container dashboard-layout">

    <!-- HERO / WELCOME CARD -->
    <section class="dash-hero">
      <div class="dash-hero-main">
        <div class="dash-hero-avatar-frame">
          <% if (user && user.avatar) { %>
            <img
              src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png?size=128"
              alt="Avatar"
              class="dash-hero-avatar-img"
            />
          <% } else if (user) { %>
            <div class="dash-hero-avatar-placeholder">
              <span>
                <%= (user.global_name || user.username || 'U').charAt(0) %>
              </span>
            </div>
          <% } else { %>
            <div class="dash-hero-avatar-placeholder">
              <span>?</span>
            </div>
          <% } %>
        </div>

        <div class="dash-hero-text">
          <p class="dash-eyebrow">License Dashboard</p>
          <h1 class="dash-welcome">
            Welcome back, <span><%= user.global_name %></span>
          </h1>
          <p class="dash-caption">Manage your license keys.</p>

          <div class="dash-hero-chips">
            <span class="hero-chip">Discord verified</span>
            <span class="hero-chip hero-chip-soft">
              Servers joined: <strong><%= user.guildCount %></strong>
            </span>
          </div>
        </div>
      </div>

      <div class="dash-hero-side">
        <div class="dash-hero-side-card">
          <p class="dash-hero-side-label">Account</p>
          <p class="dash-hero-side-value"><%= user.email %></p>
          <p class="dash-hero-side-meta">
            Logged in as <span>#<%= user.discriminator %></span>
          </p>
        </div>
      </div>
    </section>

    <!-- STATS -->
    <section class="dash-stats-grid">
      <div class="dash-stat-card">
        <p class="dash-stat-label">Total Keys</p>
        <p class="dash-stat-value"><%= keyData.total || 0 %></p>
      </div>
      <div class="dash-stat-card">
        <p class="dash-stat-label">Active</p>
        <p class="dash-stat-value"><%= keyData.active || 0 %></p>
      </div>
      <div class="dash-stat-card">
        <p class="dash-stat-label">Premium</p>
        <p class="dash-stat-value"><%= keyData.premium || 0 %></p>
      </div>
      <div class="dash-stat-card">
        <p class="dash-stat-label">Linked</p>
        <p class="dash-stat-value"><%= (keyData.linked || 0) %></p>
      </div>
    </section>

    <!-- QUICK GET FREE KEY ACTIONS -->
    <section class="dash-getfree-section">
      <div class="dash-getfree-header">
        <div>
          <h2 class="dash-section-title">Get a free key</h2>
          <p class="dash-section-caption">
            Choose your preferred provider, complete a quick verification, and your key will appear here automatically.
          </p>
        </div>
      </div>

      <div class="dash-getfree-grid">
        <!-- Work.ink -->
        <a href="/getfreekey?ads=workink" class="getfree-card">
          <div class="getfree-card-main">
            <div class="getfree-icon">
              <span class="getfree-key-icon">ðŸ”‘</span>
            </div>
            <div class="getfree-text">
              <p class="getfree-label">Get Free Key</p>
              <h3 class="getfree-title">Work.ink</h3>
              <p class="getfree-desc">
                Complete a short task and receive your ExHub key instantly after verification.
              </p>
            </div>
          </div>
          <div class="getfree-provider">
            <img
              src="/img/workink.jpg"
              alt="Work.ink"
              class="getfree-provider-logo"
            />
            <span class="getfree-cta">Start</span>
          </div>
        </a>

        <!-- Linkvertise -->
        <a href="/getfreekey?ads=linkvertise" class="getfree-card">
          <div class="getfree-card-main">
            <div class="getfree-icon">
              <span class="getfree-key-icon">ðŸ”‘</span>
            </div>
            <div class="getfree-text">
              <p class="getfree-label">Get Free Key</p>
              <h3 class="getfree-title">Linkvertise</h3>
              <p class="getfree-desc">
                Use the Linkvertise route for alternative offers and stable delivery.
              </p>
            </div>
          </div>
          <div class="getfree-provider">
            <img
              src="/img/linkvertise.png"
              alt="Linkvertise"
              class="getfree-provider-logo"
            />
            <span class="getfree-cta">Start</span>
          </div>
        </a>
      </div>
    </section>

    <!-- KEYS TABLE -->
    <section class="dash-keys-section">
      <div class="dash-keys-header">
        <div>
          <h2>Your Keys</h2>
          <p class="dash-section-caption">
            Overview of all keys currently linked to your account.
          </p>
        </div>
        <div class="dash-keys-controls">
          <input
            type="text"
            class="dash-search-input"
            placeholder="Search by key, game, or provider..."
          />
        </div>
      </div>

      <div class="dash-keys-table">
        <div class="dash-keys-row dash-keys-row--head">
          <div>Key</div>
          <div>Provider</div>
          <div>Time Left</div>
          <div>Status</div>
          <div>Tier</div>
          <div>Actions</div>
        </div>

        <% if (keyData.keys && keyData.keys.length > 0) { %>
          <% keyData.keys.forEach(function(k) { %>
            <div class="dash-keys-row">
              <div class="dash-key-id"><%= k.key %></div>
              <div><%= k.provider || '-' %></div>
              <div><%= k.timeLeft || '-' %></div>
              <div>
                <span class="badge badge-<%= (k.status || 'Active').toLowerCase() %>">
                  <%= k.status || 'Active' %>
                </span>
              </div>
              <div>
                <span class="badge badge-tier-<%= (k.tier || 'Free').toLowerCase() %>">
                  <%= k.tier || 'Free' %>
                </span>
              </div>
              <div class="dash-key-actions">
                <button
                  class="btn-subtle btn-icon"
                  title="Copy key"
                  type="button"
                  onclick="navigator.clipboard.writeText('<%= k.key %>')">
                  ðŸ“‹
                </button>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="dash-keys-empty">
            You don't have any keys yet. Use the <strong>Get Free Key</strong> shortcuts above to generate your first key.
          </div>
        <% } %>
      </div>
    </section>
  </div>
</main>

</body>
</html>
